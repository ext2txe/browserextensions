{
  "manifest_version": 2,
  "name": "Advanced History Search",
  "version": "1.0.0",
  "description": "Powerful history search with pattern matching, filters, and exports",
  "permissions": [
    "history",
    "storage"
  ],
  "sidebar_action": {
    "default_title": "History Search",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Open History Search"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
