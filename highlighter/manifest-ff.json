{
  "manifest_version": 2,
  "name": "Keyword Highlighter 0.2.10",
  "version": "0.2.10",
  "description": "Highlight elements on any website based on custom keywords and URL patterns. Supports wildcards and real-time filtering.",

  "browser_specific_settings": {
    "gecko": {
      "id": "keyword-highlighter@example.com",
      "strict_min_version": "57.0"
    }
  },

  "permissions": [
    "storage",
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Keyword Highlighter Settings",
    "default_icon": {
      "48": "icon48.png",
      "96": "icon48.png"
    }
  },

  "options_ui": {
    "page": "popup.html",
    "open_in_tab": false
  },

  "icons": {
    "48": "icon48.png",
    "96": "icon48.png"
  }
}
